		function loopTransition() { 
			move('#ball')
				.translate(-120, 0)
				.rotate(3600)
				.duration("5s")
				.then()
        			.translate(0, 120)
        			.duration('5s')
        		.then()
        			.translate(240,0)
        			.duration('10s')
        		.then()
        			.translate(0, -120)
        			.duration('5s')
        		.pop()
        		.pop()
        		.pop()
        		
			.end(function() { 
				move('#ball')
				.translate(-120, 0)
				.rotate(3600)
				.duration("5s")
				.then()
        			.translate(0, 120)
        			.duration('5s')
        		.then()
        			.translate(240,0)
        			.duration('10s')
        		.then()
        			.translate(0, -120)
        			.duration('5s')
        		.pop()
        		.pop()
        		.pop()

				.end(function() { loopTransition(); }); }); } ;
			loopTransition();

